<div flex=25>
    <img src="img/light-bulb.png" class="dialogimage">
    <md-dialog aria-label="Light Config" layout-padding modal-draggable flex=100 style="background-color: rgb(43, 43, 43)">
        <div class="progress-container animate-show-hide" flex layout="row" layout-align="center center" ng-show="makingAjaxCall">
            <md-progress-circular md-diameter="75"></md-progress-circular>
        </div>
        <form name="lightform">
            <div layout="row" class="md-toolbar-tools">

                <h3 class="border-bottom dialogheader">Address Detail</h3>
            </div>
            <md-dialog-content class="md-dialog-content text-white" ng-cloak style="overflow-x:hidden">
                <div layout="column">
                    <div layout="row" ng-repeat="address in lightDetail.bleAddress track by $index">
                        <div flex=100>
                            <md-input-container class="md-block" flex>
                                <input required md-no-asterisk type="text" placeholder="BLE Address" ng-model="lightDetail.bleAddress[$index]" />
                                <!--md-button class="md-raised md-primary" ng-click="addRow($index)" value="Add" ng-show="$last">Add</md-button-->
                                <md-button class="md-raised md-warn" ng-click="deleteRow($event,address)" value="Delete">Remove</md-button>
                            </md-input-container>
                        </div>
                    </div>
                </div>

            </md-dialog-content>
            <md-dialog-actions layout="row">
                <md-button class="md-raised md-warn" ng-click="cancelAdd(lightDetail)">Cancel</md-button>
                <md-button class="md-raised md-primary" ng-disabled="makingAjaxCall" ng-click="UpdateLight(lightDetail,lightform)">Update</md-button>
            </md-dialog-actions>
        </form>
    </md-dialog>
</div>