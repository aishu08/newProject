<md-dialog aria-label="Light Config" layout-padding modal-draggable flex=40 style="background-color: rgb(43, 43, 43)">
    <div class="progress-container animate-show-hide" flex layout="row" layout-align="center center" ng-show="makingAjaxCall">
        <md-progress-circular md-diameter="75"></md-progress-circular>
    </div>
    <form name="lightformes" ng-submit="submit()">
        <div layout="row" class="md-toolbar-tools">

            <h3 class="border-bottom dialogheader">set intesity</h3>
        </div>
        <md-dialog-content class="md-dialog-content text-white" ng-cloak style="overflow-x:hidden">

            <!-- <div > -->
            <md-radio-group layout="row" ng-model="group">
                <div flex="50" layout="row">
                    <md-radio-button flex="10" class="md-primary" value={{lightDetail.warm}}>

                    </md-radio-button>
                    <md-input-container flex class="md-block input_container">
                        <input required placeholder="warm ble" type="text" ng-model="lightDetail.warm" maxlength="4" />
                    </md-input-container>
                </div>
                <div flex="50" layout="row">
                    <md-radio-button flex="10" class="md-primary" value={{lightDetail.cool}}>

                    </md-radio-button>

                    <md-input-container flex class="md-block input_container">
                        <input required placeholder="cool ble" type="text" ng-model="lightDetail.cool" maxlength="4" />
                    </md-input-container>
                </div>
            </md-radio-group>




            <!-- </div> -->

            <div layout="row">
                <md-input-container flex="70" class="md-block input_container">
                    <input required name="intensity" placeholder="set intensity" type="number" min="0" max="99" maxlength="2" ng-model="intensity" />
                </md-input-container>
                <md-button flex="30" class="md-primary md-raised " ng-click="setIntensity() ">Intensity</md-button>

            </div>



        </md-dialog-content>
        <md-dialog-actions layout="row">
            <md-button class="md-primary md-raised " ng-click="ping() ">ping</md-button>
            <md-button class="md-primary md-raised " type="submit" value="submit">update</md-button>

            <md-button class="md-raised md-warn" ng-click="cancel() ">Cancel</md-button>
        </md-dialog-actions>
    </form>
</md-dialog>