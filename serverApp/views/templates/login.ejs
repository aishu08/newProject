<div class="particleJs" id="particleJs"></div>
<md-content class="full-height" style="height:100vh">
    <div class="md-padding" layout="row" layout-align="center center">
        <div class="adappt-logo logo-lg"></div>
    </div>

    <div class="md-padding" layout="row" layout-align="center center">
        <md-card flex-gt-sm=30 flex-sm=60 flex-xs=80 class="transparent" md-whiteframe = "8">
            <md-card-content class="padding-lg">
                <div class="text-center text-white">
                    <md-progress-circular ng-show = "makingAjaxCall"></md-progress-circular>
                    <h1>Login</h1>
                </div>
                <form type = "post" name = "loginForm" ng-submit = "login()">
                    <md-input-container class="md-block text-white">
                        <input required md-no-asterisk type="text" name="loginId" ng-model="user.uname"  placeholder="Username"/>
                        <div ng-messages="loginForm.loginId.$error">
                            <div ng-message="required">Username is required.</div>
                        </div>
                    </md-input-container>
                    <md-input-container class="md-block text-white">
                        <input required md-no-asterisk type="password" name="password" ng-model="user.password" placeholder="Password"/>
                        <div ng-messages="loginForm.password.$error">
                            <div ng-message="required">Password is required.</div>
                        </div>
                    </md-input-container>

                    <md-input-container class="md-block" layout = "row" layout-align = "center center">
                        <div flex layout = "column" layout-align = "center stretch">
                            <md-button class="md-raised md-primary" type = "submit">Login</md-button>
                        </div>
                        <div flex layout = "column" layout-align = "center stretch">
                            <md-button class="md-raised" type = "submit" ui-sref = "changePassword">Change Password</md-button>
                        </div>
                    </md-input-container>
                </form>
            </md-card-content>
        </md-card>
    </div>
</md-content>
