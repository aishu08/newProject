<md-content class="full-height adappt-watermark-image-dark" style="height:100vh" >
    <div class="md-padding" layout="row" layout-align="center center">
        <div class="adappt-logo logo-lg"></div>
    </div>

    <div class="md-padding" layout="row" layout-align="center center">
        <md-card flex-gt-sm=30 flex-sm=60 flex-xs=80 class="transparent" md-whiteframe = "8">
            <md-card-content class="padding-lg">
                <div class="text-center text-white">
                    <md-progress-circular ng-show = "makingAjaxCall"></md-progress-circular>
                    <h1>Select Commission type</h1>
                </div>
                <div>
                    <md-input-container class="md-block" layout = "row" layout-align = "center center">
                        <div flex layout = "column" layout-align = "center stretch">
                            <md-button class="md-raised md-primary" ng-click="CreateNewCommission()">Start new Commissioning</md-button>
                        </div>
                    </md-input-container>

                    <md-input-container class="md-block" layout = "row" layout-align = "center center">
                        <md-select ng-model="building_details" name="building" placeholder="Select Building" class="darktheme" ng-change="selectedBuldingChange(building_details)">
                                    <md-optgroup label="Buildings" >
                                        <md-option ng-repeat="cd in commision_details" value="{{cd}}">{{cd.name}}</md-option>
                                    </md-optgroup>
                        </md-select>
                    </md-input-container>
                    <md-input-container class="md-block" layout = "row" layout-align = "center center" >
                        <div flex layout = "column" layout-align = "center stretch">
                            <md-button class="md-raised md-primary" ng-click="ContinueToCommission()" ng-disabled="continueflag===false">Continue Commissioning</md-button>
                        </div>
                    </md-input-container>
                </div>
            </md-card-content>
        </md-card>
    </div>
</md-content>
