<md-content class="full-height adappt-watermark-image-dark" style="height:100vh" ng-class="{'blurred':blur_content}">
    <div class="md-padding" layout="row" layout-align="center center">
        <div class="adappt-logo logo-lg"></div>
    </div>

    <div class="md-padding" layout="row" layout-align="center center">
        <md-card flex-gt-sm=60 flex-sm=60 flex-xs=80 class="transparent" md-whiteframe="8">
            <md-card-content class="padding-lg">
                <div class="text-center text-white">
                    <md-progress-circular ng-show="makingAjaxCall"></md-progress-circular>
                    <h1>Select Floor and Fill host details</h1>


                </div>
                <form type="post" name="floorform" ng-submit="CreateHosts(host,floorform)">

                    <md-input-container class="md-block text-white">

                        <label> Building : {{host.buildingname}}</label>

                    </md-input-container>

                    <md-input-container class="md-block text-white">
                        <md-select required name="fl" ng-model="host.floorId" placeholder="Select Floor" class="darktheme" ng-change="OnFloorChange(host.floorId,host.buildingId)">
                            <md-optgroup label="Floors">
                                <md-option ng-repeat="fl in floors" value="{{fl.id}}">{{fl.name}}</md-option>
                            </md-optgroup>
                        </md-select>
                        <div ng-messages="floorform.name.$error">
                            <div ng-message="required">Floor is required.</div>
                        </div>
                    </md-input-container>

                    <md-input-container class="md-block text-white">
                        <input required md-no-asterisk type="text" name="name" ng-model="host.name" placeholder="Name" />
                        <div ng-messages="floorform.name.$error">
                            <div ng-message="required">Name is required.</div>
                        </div>
                    </md-input-container>
                    <div layout="row" flex>

                        <md-input-container class=" md-block" style="padding-right:2%;padding-left:2%;min-width:2%">

                            <h2>#</h2>

                        </md-input-container>

                        <md-input-container class="md-block" layout="row" layout-align="center center" style="width:100%">
                            <div flex layout="row" layout-align="stretch" style="width:100%">
                                <div flex layout="column" layout-align="stretch" style="width:100%">
                                    <h2>Certificates</h2>

                                </div>
                                <div flex layout="column" layout-align="stretch">
                                    <h2>Public Keys</h2>

                                </div>
                                <div flex layout="column" layout-align="stretch">
                                    <h2>Private Keys</h2>
                                </div>
                            </div>

                        </md-input-container>
                    </div>
                    <hr>
                    <div layout="row" flex ng-repeat="h in certificates" ng-if="!h.flag">

                        <div class=" md-block md-padding" style="vertical-align:center">

                            <input type="radio" ng-model="host.certificates" ng-value="h" style="height:100%;width:30px">

                        </div>

                        <md-input-container class="md-block" layout="row" layout-align="center center" style="width:100%">
                            <div flex layout="row" layout-align="stretch" style="width:100%">
                                <div flex layout="column" layout-align="stretch" style="width:100%">

                                    <h4>{{h.crt}}</h4>
                                </div>
                                <div flex layout="column" layout-align="stretch">

                                    <h4>{{h.pem}}</h4>
                                </div>
                                <div flex layout="column" layout-align="stretch">

                                    <h4>{{h.ppk}}</h4>
                                </div>
                            </div>

                        </md-input-container>
                    </div>
                    <md-input-container class="md-block" layout="row" layout-align="center center">
                        <div flex layout="row" layout-align="stretch">
                            <div flex layout="column" layout-align="stretch">
                                <md-button class="md-raised md-primary" type="submit">Save Host Details</md-button>
                                <md-button class="md-raised md-primary" ui-sref="commission.floor">Back</md-button>
                            </div>
                            <div flex layout="column" layout-align="right stretch">
                                <md-button class="md-raised md-primary" ng-click="ContinuetoMapping()">Continue to Mapping</md-button>
                                <md-button class="md-raised md-primary" ui-sref="commission.index">Cancel</md-button>
                            </div>
                        </div>

                    </md-input-container>

                    <md-input-container class="md-block" layout="row" layout-align="center center" ng-if="hosts.length>0">
                        <div flex layout="row" layout-align="stretch">

                            <h2>Already added Hosts details</h2>
                            <md-button class="md-raised" ng-click="hostDetails(hosts)">{{hosts.length}}</md-button>

                        </div>

                    </md-input-container>

                </form>
            </md-card-content>
        </md-card>
    </div>
</md-content>