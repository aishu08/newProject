<div flex=25>
    <img src="img/light-bulb.png" class="dialogimage">
    <md-dialog aria-label="Light Config" layout-padding modal-draggable flex=100 style="background-color: rgb(43, 43, 43)">
        <div class="progress-container animate-show-hide" flex layout="row" layout-align="center center" ng-show="makingAjaxCall">
            <md-progress-circular md-diameter="75"></md-progress-circular>
        </div>
        <form name="lightform">
            <div layout="row" class="md-toolbar-tools">

                <h3 class="border-bottom dialogheader">Light Data</h3>
            </div>
            <md-dialog-content class="md-dialog-content text-white" ng-cloak style="overflow-x:hidden">

                <div layout="column">


                    <div layout="row">
                        <div flex=100>
                            <md-input-container class="md-block" flex>
                                <input required md-no-asterisk type="text" placeholder="Light-Name" ng-model="lightDetail.name" />
                            </md-input-container>
                        </div>
                        <!--div flex="50">
                            <md-input-container class="md-block" flex>
                                <input required md-no-asterisk type="text" placeholder="Light-Address" ng-model="lightDetail.bles.address" />
                            </md-input-container>
                        </div-->
                    </div>

                    <div layout="row">
                        <div flex=50>
                            <md-input-container class="md-block">
                                <input required md-no-asterisk type="number" ng-model="lightDetail.width" placeholder="Width" />
                            </md-input-container>
                        </div>
                        <div flex="50">
                            <md-input-container class="md-block">
                                <input required md-no-asterisk type="number" ng-model="lightDetail.height" placeholder="Height" />
                            </md-input-container>
                        </div>
                    </div>

                    <div layout="row">
                        <div flex=50>
                            <md-input-container class="md-block">
                                <input required md-no-asterisk type="number" ng-model="lightDetail.minlevel" placeholder="MinLevel" />
                            </md-input-container>
                        </div>
                        <div flex="50">
                            <md-input-container class="md-block">
                                <input required md-no-asterisk type="number" ng-model="lightDetail.maxlevel" placeholder="MaxLevel" />
                            </md-input-container>
                        </div>
                    </div>

                    <div layout="row">
                        <div flex="50">
                            <md-input-container class="md-block" flex>
                                <input required md-no-asterisk type="number" ng-model="lightDetail.faderate" placeholder="FadeTime" />
                            </md-input-container>
                        </div>
                        <div flex="50">
                            <md-input-container class="md-block" flex>
                                <input required md-no-asterisk type="number" ng-model="lightDetail.wattage" placeholder="Wattage" />
                            </md-input-container>
                        </div>
                    </div>
                </div>

                <!--   <div layout="row" layout-align="center center">

                    <div>
                        <md-input-container>
                            <div flex layout="column">
                                <md-button class="md-raised md-warn" ng-click="deleteLight(lightDetail)">DELETE</md-button>
                            </div>
                        </md-input-container>
                    </div>
                    <div>
                        <md-input-container>
                            <div flex layout="column">
                                <md-button class="md-raised md-primary" ng-click="UpdateLight(lightDetail)">Update</md-button>
                            </div>
                        </md-input-container>
                    </div>


                </div> -->
            </md-dialog-content>
            <md-dialog-actions layout="row">

                <md-button class="md-raised md-warn" ng-click="deleteLight(lightDetail)">DELETE</md-button>

                <md-button class="md-raised md-primary" ng-disabled="makingAjaxCall" ng-click="UpdateLight(lightDetail,lightform)">Update</md-button>

            </md-dialog-actions>
        </form>
    </md-dialog>
</div>