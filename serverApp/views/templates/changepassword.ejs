<div class="particleJs" id="particleJs"></div>
<md-content class="full-height" style="height:100vhx`">
    <div class="md-padding" layout="row" layout-align="center center">
        <div class="adappt-logo logo-lg"></div>
    </div>
    <div class="md-padding no-background" layout="row" layout-align="center center">
        <md-card class="transparent" flex-gt-sm=30 flex-sm=60 flex-xs=80  md-whiteframe="8">
            <md-card-content class="padding-lg">
                <div class="text-center">
                    <md-progress-circular ng-show = "makingAjaxCall"></md-progress-circular>
                    <h1><span class = "underline-text-white">Change Password</span></h1>
                </div>
                <form type = "post" name = "changePasswordForm" ng-submit = "changePassword()">
                    <md-input-container class="md-block text-white">
                        <input required md-no-asterisk type="text" name="loginid" ng-model="user.uname" placeholder="Login ID"/>
                        <div ng-messages="changePasswordForm.loginid.$error">
                            <div ng-message="required">Login ID is required.</div>
                        </div>
                    </md-input-container>
                    <md-input-container class="md-block text-white">
                        <input required md-no-asterisk type="password" name="oldPassword" ng-model="user.oldPassword" placeholder="Old Password"/>
                        <div ng-messages="changePasswordForm.password.$error">
                            <div ng-message="required">Old Password is required.</div>
                        </div>
                    </md-input-container>
                     <md-input-container class="md-block text-white">
                        <input required md-no-asterisk type="password" name="password" ng-model="user.password" placeholder="Password"/>
                        <div ng-messages="changePasswordForm.repassword.$error">
                            <div ng-message="required">New Password is required.</div>
                        </div>
                    </md-input-container>
                    <md-input-container class="md-block text-white">
                        <input required md-no-asterisk type="password" name="password" ng-model="user.cnfrmPassword" placeholder=" Confirm Password"/>
                        <div ng-messages="changePasswordForm.repassword.$error">
                            <div ng-message="required">Confirm Password is required.</div>
                        </div>
                    </md-input-container>
                    <md-input-container  class="md-block" layout = "row" layout-align = "center center">
                        <div flex layout = "column" layout-align = "center stretch">
                            <md-button class="md-raised md-primary" type = "submit">Change Password</md-button>
                        </div>
                         <div flex layout = "column" layout-align = "center stretch">
                            <md-button class="md-raised" type = "button" ui-sref = "login">Cancel</md-button>
                        </div>
                    </md-input-container>
                </form>
            </md-card-content>
        </md-card>
    </div>
</md-content>
